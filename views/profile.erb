<h2><%= @user.username %>'s Page</h2>

<div class="user-blogs">

  <% @blogs.each do |blog| %>
  <a href="/blog/<%= blog.id %>"><div><%= blog.title %></div></a>

  <form class="" action="/blog-edit/<%= blog.id %>" method="post">
    <input type="submit" value="edit">
    <input type="hidden" name="blog_id" value="<%= blog.id %>">
  </form>

  <form class="" action="blog-delete/<%= blog.id %>" method="post">
    <input type="submit" name="" value="delete">
    <input type="hidden" name="blog_id" value="<%= blog.id %>">
  </form>

  <% end %>

</div>


<h2>Make New Blog</h2>
<form class="blog-input-form" action="/profile" method="post">
  <input type="text" name="title" placeholder="Blog Title">
  <div><textarea name="content" placeholder="(less than 150 characters)" rows="6" cols="20" maxlength="150"></textarea> </div>
  <input type="hidden" name="user_id" value= "<%= session[:user_id] %>">
  <input type="submit">
</form>




<h3>Other User's Profiles</h3>

<div class="all-users">
  <% User.all.each do |user| %>
  <a href="/profile/<%= user.id %>"><%= user.username %></a>
  <% end %>
</div>
